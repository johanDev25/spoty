<div class="container">
  <div class="row">
    <div class="album text-muted">
      <div class="container">
        <div class="row">
          <% @artists.each do |artist| %>
          <div class="col-md py-5">
          <div class="card" style="width: 15rem;">
            <img src="<%= artist.image_url %>" class="card-img-top">
            <div class="card-body text-center">
              <h5 class="card-title"><%= artist.name %></h5>
              <%= link_to "Ver Mas", artist, class: "btn btn-primary" %>
          </div>
          </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
